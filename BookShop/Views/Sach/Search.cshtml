@model List<BookShop.Model.SACH>
@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>
<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Sách theo chủ đề</h3>
        </div>
        <div class="see">
            <p><a href="#">See all Products</a></p>
        </div>
        <div class="clear"></div>
    </div>

    <div class="section group">
        @foreach (var item in Model)
        {
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@Url.Action("Details","Sach", new { id = item.Masach })"><img src="/Content/images/@item.Hinhminhhoa" alt="" /></a>
                <h2>@item.Tensach </h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@item.Dongia</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="preview.html">Thêm vào giỏ hàng</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>

            </div>
        }


    </div>

</div>
